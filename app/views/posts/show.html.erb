
<div class="container mt-5">
  <h2 class="text-center">Posts</h2>
  <hr>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <%= image_tag(@post.image.url(:large), class: 'card-img-top') %>
        <div class="card-body">
          <p class="card-text text-muted"><%= @post.description %></p>
          <div class="d-flex justify-content-between mt-4">
            <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-outline-primary' %>
            <% if @post.user == current_user %>
                <%= button_to "Destroy", @post, method: :delete, class: 'btn btn-danger', form: { data: { turbo_confirm: "Are you sure you want to delete this post?" } } %>
            <% else %>
                <a class="btn btn-danger disabled" role="button" aria-disabled="true">Delete - sin permiso</a>
            <% end %>

          </div>
        </div>
      </div>
      <div class="text-center mt-4">
        <%= link_to "Back to Posts", posts_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
